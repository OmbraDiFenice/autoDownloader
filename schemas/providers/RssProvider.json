{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "type",
    "url",
    "xpaths"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "RssProvider"
      ]
    },
    "url": {
      "type": "string",
      "format": "url"
    },
    "namespaces": {
      "type": "object",
      "properties": {
        "tv": {
          "type": "string"
        }
      }
    },
    "xpaths": {
      "type": "object",
      "required": [
        "items",
        "url",
        "title"
      ],
      "properties": {
        "items": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "regex"
      }
    }
  }
}